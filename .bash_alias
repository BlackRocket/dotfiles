alias upchk="$HOME/bin/upchk.sh"

# System
alias ipt="sudo iptables -L"
alias scan="sudo nmap localhost"
alias net="sudo netstat -ap" 
alias tail="tail -n 40"
alias sysinfo="sudo $HOME/bin/sysinfo.sh"
