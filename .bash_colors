hostcolor() {
	if [ "`hostname`" == "amalia" ]; then echo "38;5;111" 
	elif [ "`hostname`" == "anniki" ]; then echo "38;5;42" 
	elif [ "`hostname`" == "ylva" ]; then echo "38;5;1" 
	elif [ "`hostname`" == "runa" ]; then echo "38;5;3" 
	elif [ "`hostname`" == "fenja" ]; then echo "38;5;55" 
	else echo 36 # cyan
	fi
}

